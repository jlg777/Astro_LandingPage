---
import projects from '../../config/projects.json'
---

<h2 class="font-bold text-5xl my-5">Projects</h2>
{
  projects.map((projects) => (
    <div class="flex text-center md:text-left">
      <div class="flex-1">
        <h2 class="font-bold text-2xl my-4">{projects.title}</h2>
        <p class="my-2">{projects.descripion}`</p>
        <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 ">Mas Info</button>
      </div>
      <div class="flex-1">
        <img src={projects.image} alt="" class="w-72 m-auto" />
      </div>
    </div>
  ))
}
